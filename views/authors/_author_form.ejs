<div class="row">
  <div class="col-md-4">
    <label for="name">Full Name</label>
    <input
      type="text"
      class="form-control input-lg"
      name="name"
      placeholder="Enter your full name"
      required
    />
  </div>
  <div class="col-md-4">
    <label for="email">Email Address</label>
    <input
      type="email"
      class="form-control input-lg"
      name="email"
      placeholder="Enter your email address"
      required
    />
  </div>
  <div class="col-md-4">
    <label for="email">Phone Number</label>
    <input
      type="text"
      class="form-control input-lg"
      name="phone"
      placeholder="Enter your phone number"
      required
    />
  </div>
</div>

<!-- Second row -->
<div class="row">
  <div class="col-md-12">
    <label for="address">Address</label>
    <input
      type="text"
      class="form-control input-lg"
      name="address"
      placeholder="Enter your address. ex. street, city, state, zip"
      required
    />
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <label for="message">Messaage</label>
    <textarea
      class="form-control input-lg"
      name="message"
      cols="10"
      rows="5"
      placeholder="Enter your message"
      required
    ></textarea>
  </div>
</div>
