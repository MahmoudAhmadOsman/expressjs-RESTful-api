<section class="all_authors" style="margin-top: 5px;">
  <div class="container">
    <div class="row">
      <!-- include('_search_author')  -->
      <h1 class="text-danger"><%= title %></h1>
      <hr />
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Address</th>
            <th>Short Bio</th>
            <th>Actions</th>
          </tr>
        </thead>
        <% authors.forEach(author => { %>

        <tbody>
          <tr>
            <td><%= author.name %></td>
            <td><%= author.email %></td>
            <td><%= author.phone %></td>
            <td><%= author.address %></td>
            <td><%= author.message %></td>
            <td>
              <a
                href="/authors/<%= author.id %>/edit"
                class="btn btn-info btn-sm"
              >
                <i class="fa fa-trash"><b> Edit</b></i>
              </a>
            </td>
            <td>
              <form
                action="/authors/<%= author.id  %>?_method=DELETE "
                method="POST"
              >
                <button type="submit" class="btn btn-danger btn-sm">
                  <i class="fa fa-trash"><b> Delete</b></i>
                </button>
              </form>
            </td>
          </tr>
        </tbody>

        <% }) %>
      </table>
    </div>
  </div>
</section>
