<section class="all_authors">
  <div class="container">
    <div class="row">
      <h1 class="text-danger"><%= title %></h1>
      <hr />

      <% books.forEach(book => { %>

      <div class="col-md-3">
        <div class="thumbnail">
          <img
            src="https://getdrawings.com/vectors/vector-design-online-9.jpg"
            alt="Graphic Design"
            class="img-responsive"
          />
          <div class="caption">
            <h3 class="text-uppercase"><a href="#"><%= book.title %></a></h3>

            <h6><b>Book Description</b></h6>
            <p class="text-muted"><%= book.description %></p>
            <p class="text-muted">
              <b>Published Date:</b> <%= book.publishedDate.toLocaleDateString()
              %>
            </p>

            <p>
              <a href="#" class="btn btn-default"
                ><b class="text-danger">$ <%= book.price %></b></a
              >

              <a href="#" class="btn btn-success" role="button">Buy Now</a>
            </p>
          </div>
        </div>
      </div>

      <% }) %>
    </div>
  </div>
</section>
