<section class="all_books" style="margin-top: 40px;">
  <div class="container">
    <div class="row">
      <h2 class="text-danger">
        <%= title %> of <u><i><%= book.title %></i></u>
      </h2>
      <hr />

      <div class="col-md-6 col-md-offset-2">
        <a
          href="/books/"
          class="btn btn-default btn-sm"
          style="margin-bottom: 10px;"
        >
          <i class="fa fa-arrow-left"> Go back</i>
        </a>
        <div class="thumbnail">
          <img
            src="https://getdrawings.com/vectors/vector-design-online-9.jpg"
            alt="Graphic Design"
            class="img-responsive"
          />
          <div class="caption">
            <h3 class="text-uppercase">
              Book Title: <b class="text-danger"><%= book.title %></b>
            </h3>

            <h6><b>Book Description</b></h6>
            <p class="text-muted"><%= book.description %></p>
            <p class="text-muted">
              <b>Published Date:</b> <%= book.publishedDate.toLocaleDateString()
              %>
            </p>

            <p>
              <b class="text-danger">Price: $ <%= book.price %></b>
            </p>
            <p>
              <a
                href="/books/<%= book.id %>/edit"
                class="btn btn-success btn-sm"
              >
                <i class="fa fa-edit"><b> Edit</b></i>
              </a>
              <a href="#" class="btn btn-danger btn-sm">
                <i class="fa fa-trash"><b> Delete</b></i>
              </a>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
